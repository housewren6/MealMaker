@model Floggr.Models.ViewModels.MealMakerView

@{
    ViewData["Title"] = "Random Meal";
}
<div>
    <h1>Random Meal</h1>
    <pre class="view-meal">@Html.DisplayFor(model => model.RecipeInstructions,  new { htmlAttributes = new { @class = "preformatted-text" } })</pre>
    <p>Please note these recipes are suggestions and not tested. Please use best judgement to ensure food is cooked safely and tastes accordindly.</p>
    <div class="btn-meal-container">
        <a class="btn-meal" asp-area="" asp-controller="MealMaker" asp-action="BuildMeal" >Build a New Meal</a>
    </div>
</div>
@* onclick="window.location.href = '@Url.Action("BuildMeal", "MealMaker")'" *@