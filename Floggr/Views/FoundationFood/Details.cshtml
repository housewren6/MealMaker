@{
    ViewData["Title"] = "Food Nutrition Facts";
}

<h1>Nutrition Facts for:</h1>

<div>
    <h2>@Html.DisplayFor(model => model.FoodName)</h2>
    <hr />
    <p>All nutrient amounts are per 100g of each food </p>
