<table class="table">
    <thead>
        <tr>
            <th>
               Nutrient
            </th>
            <th>
               Amount 
            </th>
            <th>
                Unit
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FoodNutrientDetails)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NutrientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitName)
                </td>
            </tr>
        }
    </tbody>
</table>
